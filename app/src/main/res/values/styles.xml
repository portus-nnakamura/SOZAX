<resources>

    <!-- メニューのボタン -->
    <style name="menu_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_size_16</item>
        <item name="android:layout_marginLeft">@dimen/space_size_32</item>
        <item name="android:layout_marginRight">@dimen/space_size_32</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/iconcolor</item>
        <item name="android:textSize">@dimen/font_size_32</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- 行のレイアウト -->
    <style name="raw_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_size_32</item>
        <item name="maxHeight">@dimen/space_size_32</item>
        <item name="minHeight">@dimen/space_size_32</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 行のText -->
    <style name="raw_text_style">
        <item name="android:layout_width">@dimen/space_size_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/space_size_minus_2</item>
        <item name="android:layout_marginBottom">@dimen/space_size_minus_2</item>
        <item name="android:paddingTop">@dimen/space_size_8</item>
        <item name="android:paddingBottom">@dimen/space_size_8</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <!-- コピーライト -->
    <style name="copyright_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space_size_0</item>
        <item name="background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space_size_0</item>
        <item name="android:textColor">@color/heavenlyblue</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/app_copyright</item>
    </style>

    <!-- スピナーのレイアウト -->
    <style name ="spinner_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_size_16</item>
        <item name="android:layout_marginBottom">@dimen/space_size_16</item>
        <item name="android:layout_marginLeft">@dimen/space_size_16</item>
        <item name="android:layout_marginRight">@dimen/space_size_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- スピナーのText -->
    <style name ="spinner_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ヘッダロゴ -->
    <style name ="header_logo_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_size_16</item>
        <item name="android:layout_marginBottom">@dimen/space_size_16</item>
        <item name="android:layout_marginEnd">@dimen/space_size_16</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="srcCompat">@drawable/image_headerlogo</item>
    </style>

    <!-- トップ＆ログイン画面のボタンスタイル -->
    <style name ="top_and_login_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space_size_16</item>
        <item name="backgroundTint">@color/orientalblue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>

    <!-- ヘッダのアイコンバー -->
    <style name="header_icon_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_size_60</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- イメージボタン -->
    <style name="image_button_style">
        <item name="android:layout_width">@dimen/space_size_0</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- ログイン情報 -->
    <style name="login_info_text_style">
        <item name="android:layout_width">@dimen/space_size_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/space_size_minus_2</item>
        <item name="android:layout_marginBottom">@dimen/space_size_minus_2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <!-- ガイダンス -->
    <style name="guidance_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_size_56</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/heavenlyblue</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <!-- Constraint Layout Style -->
    <style name="ConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>